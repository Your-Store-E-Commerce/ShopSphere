@model ShopSphere.Web.Models.Order.OrderViewModel

@{
    ViewData["Title"] = "Checkout";
}

<form asp-action="CreateOrder" asp-controller="Orders" method="post" style="margin-top: 80px;">
    <input asp-for="BasketId" type="hidden" />
    <input asp-for="BuyerEmail" type="hidden" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShippingAddress"></label>
        <textarea asp-for="ShippingAddress" class="form-control"></textarea>
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>

    
        <div class="form-group mb-4">
            <label asp-for="DeliveryMethodId" class="form-label"></label>
            <select asp-for="DeliveryMethodId" class="form-control">
                <option value="">-- Select Delivery Method --</option>
                @if (ViewBag.DeliveryMethods != null)
                {
                    foreach (var method in ViewBag.DeliveryMethods)
                    {
                        <option value="@method.Id">@method.ShortName - @method.Price.ToString("C")</option>
                    }
                }
            </select>
            <span asp-validation-for="DeliveryMethodId" class="text-danger"></span>
        </div>


    <button type="submit" class="btn btn-primary">Place Order</button>
</form>

