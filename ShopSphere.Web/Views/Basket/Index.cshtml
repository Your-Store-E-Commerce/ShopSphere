@model ShopSphere.Web.Models.Basket.CustomerBasketViewModel

@{
    ViewData["Title"] = "Basket";
     decimal subtotal = Model.Items.Sum(item => item.Price * item.Quantity);
    decimal shipping = 5.00m; // يمكن جلبها من قاعدة البيانات أو إعدادات الموقع
    decimal total = subtotal + shipping;
}

<div class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="wrap-table-shopping-cart">
                    @if (Model.Items.Any())
                    {
                        <table class="table-shopping-cart">
                            <thead>
                                <tr class="table_head">
                                    <th class="column-1">Product</th>
                                    <th class="column-2">Name</th>
                                    <th class="column-3">Price</th>
                                    <th class="column-4">Quantity</th>
                                    <th class="column-5">Total</th>
                                    <th class="column-6">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    var itemTotal = item.Price * item.Quantity;
                                    <tr class="table_row">
                                        <td class="column-1">
                                            <div class="how-itemcart1">
                                                <img src="@item.PictureUrl" alt="@item.ProductName" class="img-thumbnail" style="max-width: 80px;" />
                                            </div>
                                        </td>
                                        <td class="column-2">
                                            @item.ProductName
                                            <div class="text-muted small">@item.Brand - @item.Type</div>
                                        </td>
                                        <td class="column-3">@item.Price.ToString("C")</td>
                                        <td class="column-4">
                                            <form asp-action="UpdateBasketItem" method="post" class="update-form">
                                                <input type="hidden" name="productId" value="@item.Id" />
                                                <div class="input-group">
                                                    <input class="form-control text-center"
                                                           type="number"
                                                           name="quantity"
                                                           value="@item.Quantity"
                                                           min="1"
                                                           max="100"
                                                           onchange="this.form.submit()" />
                                                </div>
                                            </form>
                                        </td>
                                        <td class="column-5">@itemTotal.ToString("C")</td>
                                        <td class="column-6">
                                            <form asp-action="RemoveFromBasket" method="post">
                                                <input type="hidden" name="productId" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <h4>Your basket is empty</h4>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3">Continue Shopping</a>
                        </div>
                    }
                </div>
            </div>

            @if (Model.Items.Any())
            {
                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63">
                        <h4 class="mtext-109 cl2 p-b-30">Cart Totals</h4>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">Shipping:</span>
                            </div>
                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    Standard shipping: @shipping.ToString("C")
                                </p>
                                <div class="p-t-15">
                                    <span class="stext-112 cl8">
                                        Calculate Shipping
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
                                <span class="mtext-101 cl2">Total:</span>
                            </div>
                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2">@total.ToString("C")</span>
                            </div>
                        </div>

                        <a asp-controller="Checkout" asp-action="Index"
                           class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                            Proceed to Checkout
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // تحديث السلة عند تغيير الكمية
        $(document).ready(function() {
            $('.update-form').on('submit', function(e) {
                e.preventDefault();
                $.post($(this).attr('action'), $(this).serialize(), function() {
                    location.reload();
                });
            });
        });
    </script>
}